\newenvironment{momitems}{
	\begin{center}
		\begin{longtable}{| m{1cm} | m{7.5cm} | m{1.5cm} | m{2.5cm} |} \hline
			\textbf{Item} & \textbf{Detail} & \textbf{Resp.} & \textbf{Due} \\ \hline
			\endfirsthead
			\hline
			\textbf{Item} & \textbf{Detail} & \textbf{Resp.} & \textbf{Due} \\ \hline
			\endhead
			\endfoot
			\endlastfoot
	}
	{
	\end{longtable}
	\end{center}
}

% Create a new table item. For use within the momitems environment.
\newcommand{\momitem}[4]{
	#1 & #2 & #3 & #4 \\
	\hline
