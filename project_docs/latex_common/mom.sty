% Create a table containing rows for Date, Venue, MoM Author, Participants and Apologies.
\newcommand{\momtoptable}[5]{
	\begin{center}
		\begin{tabular}{| m{3cm} | m{10.25cm} |} \hline
			\textbf{Date} & #1 \\ \hline
			\textbf{Venue} & #2 \\ \hline
			\textbf{MoM Author} & #3 \\ \hline
			\textbf{Participants} & #4 \\ \hline
			\textbf{Apologies} & #5 \\ \hline
		\end{tabular}
	\end{center}
}

